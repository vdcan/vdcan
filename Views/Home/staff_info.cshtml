    ViewBag.Title = "About";
    Layout = "~/Views/Home/_main_layout2.cshtml";
}

@using System.Data;
@section head{
    <style type="text/css">
        .main_div img {
            padding: 5px;
        }
    </style>

}

@section scripts{
    
}

<div id="content">
    <div class="container main_div">


        <div class="container main_div" id="abountDiv">
             

                @{
                    DataTable dt = (DataTable)ViewData["staff_info"];
                    if (dt != null)
                    {
                        foreach (DataRow r in dt.Rows)
                        {
         
            <div class="item-wrapp">
                <div class="portfolio-item-title">
                    <h1>  @r["real_name"] </h1>
                    <p>
                        Design / Development
                    </p>
                </div>
                <div class="portfolio-item">
                    @*<a href="single-project-small.html" class="item-permalink"><i class="icon-link"></i></a>*@
                    <a href="/upload/@r["photo"]" class="item-preview" data-rel="prettyPhoto"><i class="icon-zoom-in"></i></a>
                    <img src="/upload/thumb/@r["photo"]" alt="" />
                </div>
                <div style="float:left;clear:left;">

                    @Html.Raw(r["context"].ToString().Replace("&gt;", ">").Replace("&lt;", "<"))
                </div>


            </div> 

                           

                        }
                    }
                }


                 


        </div><!--/.container-->
    </div>
</div>
