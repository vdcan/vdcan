<div id="login">
    @*<img src="~/Content/images/km_logo_easyui.png" />*@
    <div id="login_panel">
        <table style="width: 450px; height: 150px; padding:10px;">
            <tr>
                <td>
                    @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "account")
                </td>
                <td>
                    <input type="text" id="UserCode" name="user_code" value="" tabindex="1" placeholder="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "please_input_account") " />
                </td>
            </tr>


            <tr>
                <td>
                    @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "password")
                </td>
                <td>
                    <input type="password" id="Password" name="password" value="" tabindex="2" placeholder="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "please input password")  " />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <a href="javascript:void(0)" class="cssbtn cssbtn_size12 cssbtn_green" title=" @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "login") " style=" padding:8px 10px" onclick="doLogin();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "login") </a>
                    <a href="javascript:void(0)" class="cssbtn cssbtn_size12 cssbtn_green" title=" @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "forgot pwd") " style=" padding:8px 10px" onclick="doForgot();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "forgot pwd") </a>


                    <a href="/home/register" class="cssbtn cssbtn_size12 cssbtn_green" title=" @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "register") " style=" padding:8px 10px">
                        @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "register")
                    </a>
                </td>
            </tr>
        </table>

        @*<div class="inputbox">

            </div>
            <div class="inputbox">

            </div>
            <div class="login_actions">


            </div>*@
    </div>


    <div id="pwd_panel" style="display:none;">
        <table style="width: 450px; height: 150px; padding:10px;">
            <tr>
                <td>
                    @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "account")
                </td>
                <td>
                    <input type="text" id="user_code" name="user_code" value="" tabindex="1" placeholder="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "please_input_account") " />
                </td>
            </tr>

            <tr>
                <td colspan="2">
                    @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "or")
                </td> 
            </tr>

            <tr>
                <td>
                    @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "email")
                </td>
                <td>
                    <input type="text" id="email" name="email" value="" tabindex="1" placeholder="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "please_input_email") " />
                </td>
            </tr>

             
            <tr>
                <td colspan="2">
                     <a href="javascript:void(0)" class="cssbtn cssbtn_size12 cssbtn_green" title=" @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "reset") " style=" padding:8px 40px" onclick="doRetrieve();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "reset") </a>


                    <a href="javascript:void(0)" onclick="doCancel();" class="cssbtn cssbtn_size12 cssbtn_green" title=" @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel") " style=" padding:8px 40px">
                        @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel")
                    </a>
                </td>
            </tr>
        </table>

        @*<div class="inputbox">

            </div>
            <div class="inputbox">

            </div>
            <div class="login_actions">


            </div>*@
    </div>
</div>
<div class="login_msg">
    @{
        if (ViewBag.LoginType == "reset")
      {
     @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "your password has been reset to 123456") 
      }

        if (ViewBag.LoginType == "active")
      {
     @MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "your account has been activated, password is 123456") 
      }
        
    }
</div>
