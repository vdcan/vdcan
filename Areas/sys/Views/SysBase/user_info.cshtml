<div class="easyui-layout" data-options="fit:true" style=" overflow:hidden;">
    <div id="north_panel" data-options="region:'north',border:false">
        <div id="km_toolbar" class="km_toolbar"> </div>
        <div id="km_toolbar_2" class="km_toolbar" style="display:none">
            <a id="toolbar_delete" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-undo'" title="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel")" onclick="km.toolbar.do_undo();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel")</a>
            <a id="toolbar_save" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'" title="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "save")" onclick="km.toolbar.do_save();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "save")</a>
        </div>
    </div>

    <div id="main-panel_b" data-options="region: 'center',border:true" style='width: 50%;'>

        <form id="xx_User_content" class="form_content" method="post">
            <table class="table_content" cellpadding="3" cellspacing="0" border="0">
                <input id='TPL_id' name='id' type='hidden' value='0' />

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "user code")</td> <td>  <input id='TPL_user_code' data-options="" name='user_code' type='text' class='easyui-textbox' style='width:500px' /></td></tr>
                <tr>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "name") </td>
                    <td>
                        <input id='TPL_real_name' data-options="" name='real_name' type='text' class='easyui-textbox' style='width:500px' />
                    </td>
                </tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "spell")</td> <td>  <input id='TPL_spell' data-options="" name='spell' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "sex")</td>
                    <td>

                        <select id='TPL_sex' name='sex' class="easyui-combobox" data-options="editable:false,hasDownArrow:false,panelHeight:90" style="width:500px;">
                            <option value='@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "male")'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "male")</option>
                            <option value='@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "female")'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "female")</option>
                        </select>
                    </td>
                </tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "phone")</td> <td>  <input id='TPL_phone' data-options="" name='phone' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "email")</td> <td>  <input id='TPL_email' data-options="" name='email' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "add_by")</td> <td>  <input id='TPL_add_by' data-options="" name='add_by' type='text' class='easyui-textbox' style='width:100px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "add_on")</td> <td>  <input id='TPL_add_on' data-options="" name='add_on' type='text' class='easyui-textbox' style='width:160px' /></td></tr>
                <tr><td class="td_title">QR</td> <td>  <img id="qrImg" style="width:200px;" /></td></tr>
            </table>
        </form>

    </div>
</div>
