            <table class="table_content" cellpadding="3" cellspacing="0" border="0">
                <input id='TPL_id' name='id' type='hidden' value='0' />

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "department id")</td> <td>  <input id='TPL_parent_id' data-options="" name='parent_id' type='text' class='easyui-textbox' style='width:100px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "department name")</td> <td>  <input id='TPL_department_name' data-options="" name='department_name' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "short name")</td> <td>  <input id='TPL_short_name' data-options="" name='short_name' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "company code")1</td> <td>  <input id='TPL_company_code' data-options="" name='company_code' type='text' class='easyui-textbox' style='width:100px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "sort")</td> <td>  <input id='TPL_sort' data-options="" name='sort' type='text' class='easyui-textbox' style='width:100px' /></td></tr>
                <tr>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "enabled") </td>
                    <td>
                        <select id='TPL_enabled' name='enabled' class="easyui-combobox" data-options="editable:false,hasDownArrow:false,panelHeight:90" style="width:100px;">
                            <option value='1'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "yes")</option>
                            <option value='0'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "no")</option>
                        </select>
                    </td>
                </tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "comments")</td> <td>  <input id='TPL_remark' data-options="" name='remark' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "phone")</td> <td>  <input id='TPL_phone' data-options="" name='phone' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "email")</td> <td>  <input id='TPL_email' data-options="" name='email' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "address")</td> <td>  <input id='TPL_address' data-options="" name='address' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

                <tr><td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "fax")</td> <td>  <input id='TPL_fax' data-options="" name='fax' type='text' class='easyui-textbox' style='width:500px' /></td></tr>

