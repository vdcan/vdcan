    //------------------------------------------------------------------------------
    ViewBag.Title = "源码";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head{
    <style type="text/css">
        #toolbar1, #toolbar2 {
            border-bottom: none;
        }

        .table_content {
            width: 100%;
            background: #fff;
            border: none;
        }

            .table_content td {
                border-bottom: 1px solid #ccc;
            }

                .table_content td.td_title {
                    width: 90px;
                    text-align: center;
                    font-size: 12px;
                    font-weight: bold;
                    background: #fafafa;
                    border-right: 1px solid #ccc;
                }

        .textbox, .textbox-text {
            border: none;
            border-radius: 0px;
            box-shadow: none;
            margin: 0px;
            padding: 0px;
        }

        .textbox-fucused {
            box-shadow: none;
        }

        .pagination-info {
            display: none;
        }
    </style>
}

@section scripts{
    <script src="~/Areas/sys/ViewJS/source.js?v=@ViewBag.ts"></script>
    <script type="text/javascript">
        @*var model_string = '@Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model))';
        km.model = JSON.parse(model_string);

        km.pageSize = @ViewBag.Settings["gridrows"];*@
        var gPageID =@ViewBag.page_id;
    </script>
}

<div class="easyui-layout" data-options="fit:true" style=" overflow:hidden;">
    <div id="north_panel" data-options="region:'north',border:false">
        <div id="km_toolbar" class="km_toolbar">

        </div>

        <div id="km_toolbar_2" class="km_toolbar" style="display:none">
            <a id="toolbar_delete" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-undo'" title="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel")" onclick="km.toolbar.do_undo();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "cancel")</a>
            <a id="toolbar_save" href="javascript:void(0)" class="easyui-linkbutton" data-options="plain:true,iconCls:'icon-save'" title="@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "save")" onclick="km.toolbar.do_save();">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "save")</a>
        </div>

    </div>
    <div id="west_panel" data-options="region: 'west',title:'',border:true,split:true" style="width: 25%;border-bottom: none; border-left: none;  ">

        <table id="xx_Sourcegrid"></table>
    </div>

    <div id="main_panel" data-options="region: 'center',title:'',border:true" style="padding: 0px; border-bottom: none; ">
        <form id="xx_Source_content" class="form_content" method="post">
            <table class="table_content" cellpadding="3" cellspacing="0" border="0">
                <input id='TPL_id' name='id' type='hidden' value='0' />
                <tr>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "file name")</td>
                    <td>  <input style='width:200px;' data-options="multiline:false" id='TPL_file_name' name='file_name' type='text' class='easyui-textbox' /></td>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "file type")</td>
                    <td>  <input id='TPL_file_type' data-options="" name='file_type' type='text' class='easyui-textbox' style='width:50px' /></td>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "published flag") </td>
                    <td>
                        <select id='TPL_publish_flag' name='publish_flag' class="easyui-combobox" data-options="editable:false,hasDownArrow:false,panelHeight:90" style="width:50px;">
                            <option value='0'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "no publish")</option>
                            <option value='1'>@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "published")</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "page")</td>
                    <td>  <input id='TPL_page_id' data-options="" name='page_id' type='text' class='easyui-textbox' style='width:50px' /></td>

                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "add_by")</td>
                    <td>  <input id='TPL_add_by' data-options="" name='add_by' type='text' class='easyui-textbox' style='width:50px' /></td>
                    <td class="td_title">@MyUIHelper.Get((System.Data.DataTable)ViewData["dictionary"], "add_on")</td>
                    <td>  <input id='TPL_add_on' data-options="" name='add_on' type='text' class='easyui-textbox' style='width:115px' /></td>

                </tr>
            </table>


        </form>
        <input style='width:100%;height:600px;' data-options="multiline:true" id='TPL_source' name='source' type='text' class='easyui-textbox' />
    </div>
</div>
