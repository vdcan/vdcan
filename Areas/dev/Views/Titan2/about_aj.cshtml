<div class="row">
    <div class="col-sm-6">


        <div ng-controller="MyLogCtrl">

            <div class="panel panel-default">
                <div class="panel-heading">
                    MyLog
                    <div style="float:right;">
                        <button class="btn primary" ng-click="InsertSide()" style="padding:0px;"><i class="fa fa-plus-circle">Add&nbsp;&nbsp;</i></button>
                    </div>
                </div>
                <div class="table-responsive">
                    <div ui-grid="MyLoggridOptions" ui-grid-pagination ui-grid-selection style="min-height:420px;"></div>
                </div>
            </div>

        </div>

    </div>
    <div class="col-sm-6">

        <tabset justified="false" class="tab-container">

            <tab heading="My Log " id="tab_a1">

                <div ng-controller="MyLogDetailCtrl">
                    <div class="modal-header">
                        MyLog
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            <label>action</label>
                            <p>
                                <div auto-complete source='loader' loader='ccn' display-property='text' value-property='text' min-chars='2' placeholder='action' style=' z-index:200'> <input id='ip' ng-model='row.action' name='addressText' style='width: 300px;' />   </div>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>action_data</label>
                            <p>
                                <textarea type='text' class='form-control' ng-model='row.action_data'></textarea>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>add_by</label>
                            <p>
                                <input type='url' class='form-control' ng-model='row.add_by'>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>add_on</label>
                            <p>
                                <div ng-controller='DatepickerDemoCtrl'> <div class='input-group w-md'> <input type='text' class='form-control' datepicker-popup='{format}' ng-model='row.add_on' is-open='opened' datepicker-options='dateOptions' ng-required='true' close-text='Close' /> <span class='input-group-btn'> <button type='button' class='btn btn-default' ng-click='open($event)'><i class='glyphicon glyphicon-calendar'></i></button> </span> </div> </div>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>app_code</label>
                            <p>
                                <select ui-select ng-init='getDDL("client")' class='form-control m-b' ng-model='row.app_code'><option data-ng-repeat='d in DDLData["client"]' value='{{d.id}}'>{{ d.text }}</ option ></select>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>ip</label>
                            <p>
                                <label class='i-switch m-t-xs m-r'> <input type='checkbox' ng-model='row.ip' checked>  <i></i> </label>
                            </p>
                        </div>
                        <div class="form-group">
                            <label>menu_code</label>
                            <p>
                                <div '><label  ><input type='radio' ng-model='row.menu_code' value='1' name='r_menu_code'> active</label><label><input type='radio' ng-model='row.menu_code' value='0' name='r_menu_code'> inactive</label></div>
                            </p>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <div class=" MyLogDetailButtons" style="display:none;">
                            <button ng-click="save()" class="btn btn-primary">Save</button>
                            <button ng-click="cancel()" class="btn">Cancel</button>

                        </div>
                    </div>
                </div>

            </tab>

            <tab heading="My Log2 " id="tab_a2">


                <div ng-controller="MyLog2Ctrl">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            MyLog2
                            <div style="float:right;">
                                <button class="btn primary" ng-click="InsertRow()" style="padding:0px;"><i class="fa fa-plus-circle">Add&nbsp;&nbsp;</i></button>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <div ui-grid="MyLog2gridOptions" ui-grid-pagination ui-grid-selection style="min-height:420px;"></div>
                        </div>
                    </div>
                </div>

            </tab>

        </tabset>
    </div>
</div>
